{
  "name": "mark85-cypress-api",
  "version": "1.0.0",
  "description": "Projeto de testes de API do Mark85",
  "main": "index.js",
  "scripts": {
    "test": "npx cypress run",
    "allure:clean": "rm -rf allure-results/* allure-report/* || true",
    "allure:generate": "npx allure generate ./allure-results -o ./allure-report --clean",
    "allure:report": "npx allure open ./allure-report",
    "ci": "npm run test && npm run allure:generate"
  },
  "keywords": [
    "cypress",
    "api",
    "mark85",
    "mongodb",
    "rabbitmq"
  ],
  "author": "Fulano de Tall",
  "license": "MIT",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress": "^15.8.1",
    "cypress-plugin-api": "^2.11.2",
    "dotenv": "^17.2.3",
    "mongodb": "^7.0.0"
  }
}
